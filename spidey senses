<body>
    <audio autoplay loop>
        <source src="spiderman_theme.mp3" type="audio/mpeg">
    </audio>
    
    <div class="container">
        <h1>Will You Be My Valentine? </h1>
        <img src="spiderman.gif" class="spiderman">
        <br>
        <button class="btn yes-btn" onclick="sayYes()">YES</button>
        <button class="btn no-btn" id="noButton" onmouseover="moveNoButton()">NO</button>
    </div>
    
    <div class="web" id="web"></div>
    
    <script>
        function sayYes() {
            document.body.innerHTML = "<h1 style='color: white; text-align: center;'>YAY! we'll go on a date once you come back<3</h1>";
            document.body.style.background = "url('fireworks.gif') no-repeat center/cover";
        }
        
        let speed = 10;
        function moveNoButton() {
            var button = document.getElementById('noButton');
            var x = Math.random() * (window.innerWidth - 100);
            var y = Math.random() * (window.innerHeight - 100);
            button.style.left = x + 'px';
            button.style.top = y + 'px';
            speed += 5;
            button.style.transition = "left " + speed + "ms, top " + speed + "ms";
        }
    </script>
</body>
