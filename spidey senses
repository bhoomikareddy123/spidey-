    <style>
        body {
            background: url('spiderman_bg.jpg') no-repeat center center/cover;
            text-align: center;
            color: white;
            font-family: Arial, sans-serif;
            overflow: hidden;
        }
        .container {
            margin-top: 50px;
        }
        h1 {
            font-size: 3rem;
        }
        .spiderman {
            position: absolute;
            top: 20px;
            left: 50%;
            width: 100px;
            animation: swing 2s infinite ease-in-out;
        }
        @keyframes swing {
            0% { transform: translateY(0px); }
            50% { transform: translateY(-30px); }
            100% { transform: translateY(0px); }
        }
        .btn {
            font-size: 20px;
            padding: 10px 20px;
            margin: 20px;
            border: none;
            cursor: pointer;
            transition: 0.3s;
            border-radius: 10px;
        }
        .yes-btn {
            background: red;
            color: white;
        }
        .no-btn {
            background: black;
            color: white;
            position: absolute;
        }
        .web {
            display: none;
            position: absolute;
            width: 200px;
            height: 200px;
            background: url('web.png') no-repeat center/contain;
        }
        @keyframes webShoot {
            0% { transform: scale(0); }
            100% { transform: scale(1); }
        }
